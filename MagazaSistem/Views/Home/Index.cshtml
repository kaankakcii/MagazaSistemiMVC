<!DOCTYPE html>


<!DOCTYPE html>
<html>
<head>
    <style>
        .introspectionDiv {
            margin: auto;
            width: 1300px;
            height: 550px;
        }

        .productsDiv {
            position: relative;
            left: 150px;
            top: 70px;
            background-color: dodgerblue;
            border: 2px solid white;
            width: 180px;
            height: 180px;
            border-radius: 10px;
        }

            .productsDiv:hover {
                background-color: dodgerblue;
                opacity: 0.7;
                transition-duration: 0.4s;
            }
    </style>



</head>

<body style="background-color: gainsboro;  padding: 0px; margin: 0px;">

    <div style="text-align: center; background-color:white; width: 100%; height: 100px; margin: 0px;">
        <img style="margin-top: 10px;" width="170px" height="70px" src="~/Image/1324013.jpg">

        <div style="position: absolute; left: 150px; top: 10px; color:rgb(219, 6, 6); font-weight:bold; font-size: 12px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            <table>
                <tr>
                    <td><img src="/Image/icons8-calendar-24 (6).png"></td>

                    <td>@Session["Date"]</td>
                </tr>
                <tr>
                    <td>
                        <img width="25px" height="25px" src="/Image/icons8-clock-48.png">
                    </td>
                    <td>
                        @Session["Clock"]
