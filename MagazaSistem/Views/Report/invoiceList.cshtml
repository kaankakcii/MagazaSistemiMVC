@using MagazaSistem.Entites.Models
@model List<Invoice>
@{
    ViewBag.Title = "invoiceList";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .inclusive {
        width: 100%;
        height: 100%;
        display: flex;
        text-align: center;
    }


    .dashboardBox {
        width: 97%;
        height: 200px;
        display: flex;
        justify-content: center;
        flex-wrap: unset;
        text-align: center;
        margin: auto;
    }


    .BoxDiv {
        background-color: dodgerblue;
        border: 2px solid white;
        width: 350px;
        height: 150px;
        border-radius: 5px;
        margin: 22px;
        justify-content: space-between;
        flex-wrap: unset;
        display: flex;
        text-align: center;
    }

    .BoxDiv-div {
        color: white;
        font-weight: bold;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 20px;
        width: 160px;
        height: 150px;
    }

    .InvoiceListDiv {
        justify-content: space-between;
        flex-wrap: unset;
        display: flex;
        text-align: center;
        width: 93%;
        margin: auto;
        margin-top: 30px;
        border-bottom: 1px solid;
        border-color: #696868;
        padding: 0px 25px 0px 25px;
        font-weight: bold;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #696868;
    }
</style>
<div class="productSaveBar">


    <div class="productSaveText"><p class="p">Satış Raporu</p></div>

</div>

<div class="inclusive">
    <div class="dashboardBox">

        <div class="BoxDiv">
            <div class="BoxDiv-div"><img style="margin-top:20px; opacity:0.6; " width="100px" height="100px" src="~/Image/barcode.png"></div>
            <div class="BoxDiv-div">
                <div style="margin-top:40px; margin-right:25px;">
                    <h3>@ViewBag.ToplamAdet</h3>
                    <h6>Toplam Adet</h6>
                </div>

            </div>

        </div>

        <div class="BoxDiv">
            <div class="BoxDiv-div"><img style="margin-top:9px; opacity:0.6; " width="120px" height="120px" src="~/Image/gift-box.png"></div>
            <div class="BoxDiv-div">
                <div style="margin-top:40px; margin-right:25px;">
                    <h3>@ViewBag.ToplamIndirim TRY</h3>
                    <h6>Toplam İndirim</h6>
                </div>

            </div>

        </div>

        <div class="BoxDiv">
            <div class="BoxDiv-div"><img style="margin-top:20px; opacity:0.6; " width="100px" height="100px" src="~/Image/bank.png"></div>
            <div class="BoxDiv-div">
                <div style="margin-top:40px; margin-right:25px;">
                    <h3>@ViewBag.KDV TRY</h3>
                    <h6>Toplam KDV</h6>
                </div>

            </div>

        </div>


        <div class="BoxDiv">
            <div class="BoxDiv-div"><img style="margin-top:20px; opacity:0.6; " width="100px" height="100px" src="~/Image/price-tag.png"></div>
            <div class="BoxDiv-div">
                <div style="margin-top:40px; margin-right:25px;">
                    <h3>@ViewBag.ToplamMiktar TRY</h3>
                    <h6>Toplam Miktar</h6>
                </div>

            </div>

        </div>



    </div>
</div>

<div class="productSaveBar">


    <div class="productSaveText"><p class="p">Raporlar</p></div>

</div>

<div class="InvoiceListDiv">
    <div style="width:100px;">Fatura No</div>
    <div style="width:100px;">Ödeme Yöntemi</div>
    <div style="width:100px;">Ara Toplam</div>
    <div style="width:100px;">İndirim</div>
    <div style="width:100px;">Kdv</div>
    <div style="width:100px;">Toplam</div>
    <div style="width:100px;">Düzenleme Tarihi</div>
    <div style="width:100px;">Sorumlu</div>

</div>
@foreach (var invoice in Model)
{
    <div><div class="InvoiceListDiv">
        <div style="width:100px;"><a href="/Report/FaturaDetay/@invoice.InvoiceId" style="text-decoration:none;">@invoice.InvoiceNo</a></div>
        <div style="width:100px;">Nakit</div>
        <div style="width:100px;">@invoice.AraToplam TRY</div>
        <div style="width:100px;">@invoice.Indirim TRY</div>
        <div style="width:100px;">@invoice.Kdv TRY</div>
        <div style="width:100px;">@invoice.Toplam TRY</div>
        <div style="width:100px;">@invoice.DüzenlenmeTarihi</div>
        <div style="width:100px;">@invoice.Sorumlu</div>

    </div></div>


}